@model IEnumerable<ShopApp.Models.Prenda>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioPrenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaLanzamiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isRetired)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioPrenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaLanzamiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isRetired)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PrendaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PrendaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PrendaID">Delete</a>
               
            </td>
        </tr>
}
    </tbody>
</table>
