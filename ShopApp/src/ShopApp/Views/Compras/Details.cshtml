        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Marca
                </th>
                <th>
                    Precio
                </th>
                <th>
                    Cantidad
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ItemsCompra.Count; i++)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.ItemsCompra.ElementAt<ItemCompra>(i).Prenda.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ItemsCompra.ElementAt<ItemCompra>(i).Prenda.Marca.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ItemsCompra.ElementAt<ItemCompra>(i).Prenda.PrecioPrenda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.ItemsCompra.ElementAt<ItemCompra>(i).Cantidad)
