@model ShopApp.Models.Retirada

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Retirada</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.titulo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.titulo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.descripcion)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.fechaEfectiva)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fechaEfectiva)
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Marca
                </th>
                <th>
                    Ventas Semanales
                </th>
                <th>
                    Motivo Retirada
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.motivosRetirada.Count; i++)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.motivosRetirada.ElementAt<MotivoRetirada>(i).Prenda.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.motivosRetirada.ElementAt<MotivoRetirada>(i).Prenda.Marca.Nombre)
                </td>
                <td>
                    @ViewData[Model.motivosRetirada.ElementAt<MotivoRetirada>(i).Prenda.PrendaID.ToString()]
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.motivosRetirada.ElementAt<MotivoRetirada>(i).descripcion)
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
